{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Depurar con Make (GDB)",
      "type": "cppdbg",
      "request": "launch",
      
      // CAMBIA ESTO por el nombre de tu ejecutable
      "program": "${workspaceFolder}/demo", //importante
      
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      // Esta es la "magia" que conecta los dos archivos
      "preLaunchTask": "build_con_make"
    }
  ]
}